{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit"
  },
  "editor.rulers": [120],
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD025": false,
    "MD033": false
  },
  "[jsonc][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true
  },
  "json.schemaDownload.enable": true,
  "[yaml][dockercompose][github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "yaml.format.enable": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true
  },
  "cSpell.words": [
    "Codecov",
    "devcontainer",
    "devcontainers",
    "dockercompose"
  ],
  "todo-tree.general.tags": [
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "REVIEW",
    "OPTIMIZE",
    "CHANGED",
    "NOTE",
    "WARNING"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#000000",
    "background": "#2C7CFF",
    "iconColor": "#24ff41",
    "opacity": 45
  },
  "todo-tree.highlights.customHighlight": {
    "HACK": {
      "icon": "zap"
    },
    "FIXME": {
      "icon": "flame",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    },
    "TODO": {
      "icon": "check-circle"
    },
    "XXX": {
      "icon": "x-circle",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "REVIEW": {
      "icon": "pin"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "CHANGED": {
      "icon": "issue-reopened"
    },
    "NOTE": {
      "icon": "thumbsup"
    },
    "WARNING": {
      "icon": "alert",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    }
  },
  "gitmoji.onlyUseCustomEmoji": true, // カスタマイズした絵文字のみ表示する
  "gitmoji.addCustomEmoji": [
    // 絵文字のカスタマイズ
    {
      "emoji": "🐛",
      "code": ":bug:",
      "description": "バグ修正 (fix)"
    },
    {
      "emoji": "👍",
      "code": ":+1:",
      "description": "機能改善 (fix/feat)"
    },
    {
      "emoji": "✨",
      "code": ":sparkles:",
      "description": "部分的な機能追加 (feat)"
    },
    {
      "emoji": "🎉",
      "code": ":tada:",
      "description": "盛大に祝うべき大きな機能追加 (feat)"
    },
    {
      "emoji": "🚀",
      "code": ":rocket:",
      "description": "パフォーマンス改善 (feat)"
    },
    {
      "emoji": "🔒",
      "code": ":lock:",
      "description": "新機能の公開範囲の制限 (feat)"
    },
    {
      "emoji": "👮",
      "code": ":cop:",
      "description": "セキュリティ関連の改善 (feat)"
    },
    {
      "emoji": "📚",
      "code": ":books:",
      "description": "ドキュメント修正 (docs)"
    },
    {
      "emoji": "👕",
      "code": ":shirt:",
      "description": "Lintエラーの修正やコードスタイルの修正 (style)"
    },
    {
      "emoji": "♻️",
      "code": ":recycle:",
      "description": "リファクタリング (refactor)"
    },
    {
      "emoji": "🚿",
      "code": ":shower:",
      "description": "不要な機能・使われなくなった機能の削除 (refactor)"
    },
    {
      "emoji": "📦",
      "code": ":package:",
      "description": "新規パッケージやライブラリの追加"
    },
    {
      "emoji": "💚",
      "code": ":green_heart:",
      "description": "テストやCIの修正・改善 (test)"
    },
    {
      "emoji": "👷",
      "code": ":construction_worker:",
      "description": "ビルドシステムや外部依存関係の変更"
    },
    {
      "emoji": "🔧",
      "code": ":wrench:",
      "description": "依存パッケージなどのアップデート (chore)"
    },
    {
      "emoji": "🌐",
      "code": ":globe_with_meridians:",
      "description": "i18n (国際化) 関連の変更"
    },
    {
      "emoji": "👓",
      "code": ":eyeglasses:",
      "description": "関連の変更"
    },
    {
      "emoji": "📈",
      "code": ":chart_with_upwards_trend:",
      "description": "メトリクスやログの追加/改善"
    }
  ],
  "cSpell.ignorePaths": [
    ".vscode",
    ".devcontainer/devcontainer.json",
  ],
  "errorLens.excludeBySource": ["cSpell"]
}
